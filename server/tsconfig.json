{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist/js",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["src/**/*"]
}
